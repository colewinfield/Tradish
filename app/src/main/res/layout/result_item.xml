<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp">

<!--THIS IS THE LAYOUT FOR THE CARDS THAT WILL DISPLAY A RESTAURANT/MARKET IN RESULTS-->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/nameOfRestaurantResult"
            tools:text="Name of Restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>


        <TextView
            android:id="@+id/categoryOfRestaurantResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionOfRestaurantResult"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            tools:text="Category" />

        <TextView
            android:id="@+id/descriptionOfRestaurantResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/nameOfRestaurantResult"
            android:layout_marginBottom="8dp"
            tools:text="@string/lipsum" />

        <TextView
            android:id="@+id/authenticityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionOfRestaurantResult"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            tools:text="Authenticity: 4.3 Stars" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>