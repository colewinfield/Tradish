<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp">

<!--THIS IS THE LAYOUT FOR THE CARDS THAT WILL DISPLAY A RESTAURANT/MARKET IN RESULTS-->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/nameOfRestaurantResult"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="2dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            tools:text="Name of Restaurant" />

        <TextView
            android:id="@+id/categoryOfRestaurantResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionOfRestaurantResult"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            tools:text="Category" />

        <TextView
            android:id="@+id/descriptionOfRestaurantResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameOfRestaurantResult"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginBottom="8dp"
            tools:text="@string/lipsum" />

        <TextView
            android:id="@+id/authenticityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionOfRestaurantResult"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            tools:text="Authenticity: 4.3 Stars" />

        <RatingBar
            android:id="@+id/ResultsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:isIndicator="true"
            android:layout_below="@id/authenticityLevel"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="8dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>